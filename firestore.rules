rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // السماح للجميع بقراءة السيارات والفروع
    match /vehicles/{docId} {
      allow read: if true;
      allow write: if request.auth.token.role == 'admin';
    }
    
    match /branches/{docId} {
      allow read: if true;
      allow write: if request.auth.token.role == 'admin';
    }
    
    // حماية بيانات المستخدمين
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || request.auth.token.role == 'admin';
    }
    
    // حماية المواعيد
    match /testDriveBookings/{bookingId} {
      allow read: if 
        request.auth != null && (
          request.auth.uid == resource.data.customerId ||
          request.auth.token.role in ['staff', 'admin']
        );
      allow write: if 
        request.auth != null && 
        (request.auth.uid == resource.data.customerId || 
         request.auth.token.role == 'admin');
    }
    
    match /serviceBookings/{bookingId} {
      allow read: if 
        request.auth != null && (
          request.auth.uid == resource.data.customerId ||
          request.auth.token.role in ['staff', 'admin']
        );
      allow write: if 
        request.auth != null && 
        (request.auth.uid == resource.data.customerId || 
         request.auth.token.role == 'admin');
    }
    
    match /serviceTypes/{serviceId} {
      allow read: if true;
      allow write: if request.auth.token.role == 'admin';
    }
    
    // حماية الإعدادات العامة
    match /settings/{docId} {
      allow read: if true;
      allow write: if request.auth.token.role == 'admin';
    }
  }
}