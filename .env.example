# ==============================================
# Environment Variables Template for Vercel
# ==============================================
# نسخ هذا الملف إلى .env.local للتطوير المحلي
# إضافة هذه المتغيرات في Vercel Dashboard للإنتاج
# ==============================================

# ----------------------------------------------
# Database Configuration (إلزامي)
# ----------------------------------------------
# PostgreSQL Connection String
# للحصول عليه من:
# - Vercel Postgres: تلقائياً من Vercel Dashboard
# - Supabase: Settings → Database → Connection String
# - Neon: Dashboard → Connection Details
DATABASE_URL="postgresql://username:password@host:5432/database?schema=public"

# Connection Pooling (موصى به للإنتاج)
# يحسن الأداء ويقلل عدد الاتصالات
DATABASE_URL_POOLING="postgresql://username:password@host:5432/database?schema=public&pgbouncer=true"

# ----------------------------------------------
# NextAuth Configuration (إلزامي)
# ----------------------------------------------
# URL الخاص بالموقع
# للتطوير المحلي: http://localhost:3000
# للإنتاج: https://your-domain.vercel.app
NEXTAUTH_URL="https://elhamd-steel.vercel.app"

# مفتاح سري للتشفير (32 حرف على الأقل)
# لتوليد مفتاح جديد: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-minimum-32-characters-long"

# ----------------------------------------------
# Node Environment (إلزامي)
# ----------------------------------------------
NODE_ENV="production"

# ----------------------------------------------
# Email Service Configuration (اختياري)
# ----------------------------------------------
# إذا كنت تستخدم خدمة البريد الإلكتروني
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="noreply@your-domain.com"
EMAIL_SECURE="false"

# ----------------------------------------------
# Payment Gateway - Fawry (اختياري)
# ----------------------------------------------
# إذا كنت تستخدم بوابة الدفع Fawry
FAWRY_MERCHANT_CODE=""
FAWRY_SECRET_KEY=""
FAWRY_API_URL="https://atfawry.fawrystaging.com/ECommerceWeb/Fawry/payments/charge"

# ----------------------------------------------
# Payment Gateway - Paymob (اختياري)
# ----------------------------------------------
# إذا كنت تستخدم بوابة الدفع Paymob
PAYMOB_API_KEY=""
PAYMOB_SECRET_KEY=""
PAYMOB_INTEGRATION_ID=""
PAYMOB_IFRAME_ID=""
PAYMOB_HMAC_SECRET=""

# ----------------------------------------------
# Cloud Storage - AWS S3 (اختياري)
# ----------------------------------------------
# إذا كنت تستخدم AWS S3 لتخزين الملفات
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_BUCKET_NAME=""
AWS_CLOUDFRONT_URL=""

# ----------------------------------------------
# Cloud Storage - Cloudinary (اختياري)
# ----------------------------------------------
# إذا كنت تستخدم Cloudinary لتخزين الصور
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""
CLOUDINARY_UPLOAD_PRESET=""

# ----------------------------------------------
# Analytics - Google Analytics (اختياري)
# ----------------------------------------------
# إذا كنت تستخدم Google Analytics
NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_GA_MEASUREMENT_ID=""

# ----------------------------------------------
# Maps - Google Maps (اختياري)
# ----------------------------------------------
# إذا كنت تستخدم Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""

# ----------------------------------------------
# SMS Service - Twilio (اختياري)
# ----------------------------------------------
# إذا كنت تستخدم Twilio للرسائل النصية
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# ----------------------------------------------
# SMS Service - Local Provider (اختياري)
# ----------------------------------------------
# إذا كنت تستخدم مزود محلي للرسائل النصية
SMS_PROVIDER_API_KEY=""
SMS_PROVIDER_API_URL=""
SMS_SENDER_NAME=""

# ----------------------------------------------
# Social Media OAuth (اختياري)
# ----------------------------------------------
# إذا كنت تستخدم تسجيل الدخول عبر وسائل التواصل

# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Facebook OAuth
FACEBOOK_CLIENT_ID=""
FACEBOOK_CLIENT_SECRET=""

# Twitter OAuth
TWITTER_CLIENT_ID=""
TWITTER_CLIENT_SECRET=""

# ----------------------------------------------
# Monitoring & Error Tracking (اختياري)
# ----------------------------------------------
# Sentry for error tracking
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# LogRocket for session replay
LOGROCKET_APP_ID=""

# ----------------------------------------------
# Feature Flags (اختياري)
# ----------------------------------------------
# تفعيل/تعطيل ميزات معينة
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_CHAT="false"
NEXT_PUBLIC_ENABLE_NOTIFICATIONS="true"
NEXT_PUBLIC_ENABLE_PWA="true"

# ----------------------------------------------
# API Rate Limiting (اختياري)
# ----------------------------------------------
# حدود استخدام API
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# ----------------------------------------------
# Cache Configuration (اختياري)
# ----------------------------------------------
# إعدادات التخزين المؤقت
CACHE_TTL="3600"
REDIS_URL=""

# ----------------------------------------------
# Webhook URLs (اختياري)
# ----------------------------------------------
# عناوين Webhooks للخدمات الخارجية
WEBHOOK_SECRET=""
PAYMENT_WEBHOOK_URL=""

# ----------------------------------------------
# Custom Domain (اختياري)
# ----------------------------------------------
# النطاق المخصص
NEXT_PUBLIC_DOMAIN="your-domain.com"
NEXT_PUBLIC_API_URL="https://your-domain.com/api"

# ----------------------------------------------
# Debug & Development (للتطوير فقط)
# ----------------------------------------------
# تفعيل وضع التطوير
DEBUG="false"
VERBOSE_LOGGING="false"

# ----------------------------------------------
# Security (إلزامي للإنتاج)
# ----------------------------------------------
# مفاتيح التشفير الإضافية
ENCRYPTION_KEY=""
JWT_SECRET=""

# CORS Origins (مصادر مسموح بها)
ALLOWED_ORIGINS="https://your-domain.com,https://www.your-domain.com"

# ----------------------------------------------
# Backup & Recovery (اختياري)
# ----------------------------------------------
# إعدادات النسخ الاحتياطي
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"

